    async void RemoveVariant(int productTypeId)
    {
        var variant = product.Variants.Find(v => v.ProductTypeId == productTypeId);

        if (variant == null)
            return;

        if (variant.IsNew)
            product.Variants.Remove(variant);

        else
            variant.Deleted = true;
    }

